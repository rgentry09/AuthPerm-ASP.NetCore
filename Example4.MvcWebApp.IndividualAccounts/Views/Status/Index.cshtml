@using Example4.MvcWebApp.IndividualAccounts.PermissionsCode
@using AuthPermissions.BaseCode.PermissionsCode
@using ExamplesCommonCode.DownStatusCode
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<KeyValuePair<string,string>>

@{
    ViewData["Title"] = "ListMaintenance";
}

<h1>List app statuses</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <h3 class="text-success">@ViewBag.Message</h3>
}

@if (User.HasPermission(Example4Permissions.AppStatusAllDown) 
   && Model.All(x => x.Key != RedirectUsersViaStatusData.DownForStatusAllAppDown))
{
    <a asp-action="TakeAllDown" class="btn btn-primary">set status to "all down"</a>
}
@if (User.HasPermission(Example4Permissions.AppStatusTenantDown) 
    && Model.All(x => x.Key != RedirectUsersViaStatusData.DownForStatusAllAppDown))
{
    <a asp-action="TakeTenantDown" class="btn btn-primary">set tenant status to "down"</a>
}

<br/>

<table class="table">
    <thead>
        <tr>
            <th>
                Key
            </th>
            <th>
                Value
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @item.Key
                </td>
                <td>
                    @item.Value
                </td>
                <td>
                    @if (User.HasPermission(Example4Permissions.AppStatusRemove))
                    {
                        @Html.ActionLink("Remove", "Remove", new { key = item.Key })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

