{
  "ShardingData": {
    "ShardingDatabases": [
      {
        //This is a way to define a database using all the defaults
        //If you only define the name, then the other parts are set up to use the "DefaultConnection" without changing the database name
        "Name": "Default Database"
      },
      {
        //This defines the DatabaseName, so you will have another database
        "Name": "Database1",
        "DatabaseName": "asp.net-Example6.Sharding_Database1"
      },
      {
        //This shows the complete set of the properties
        "Name": "Database2",
        "DatabaseName": "asp.net-Example6.Sharding_Database2",
        "ConnectionName": "DefaultConnection",
        "DatabaseType":  "SqlServer"
      }
    ]
  }
}
