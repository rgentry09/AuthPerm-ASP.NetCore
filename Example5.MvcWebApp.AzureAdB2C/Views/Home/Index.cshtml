@model AppSummaryPlus
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Example5 - Using Azure Active Directory</h1>
</div>
<h4>Application summary</h4>
<ul>
    <li><strong>@nameof(AppSummaryPlus.Application)</strong>:&nbsp;@Model.Application</li>
    <li><strong>@nameof(AppSummaryPlus.AuthorizationProvider)</strong>:&nbsp;@Model.AuthorizationProvider</li>
    <li><strong>@nameof(AppSummaryPlus.CookieOrToken)</strong>:&nbsp;@Model.CookieOrToken</li>
    <li>
        <strong>@nameof(AppSummaryPlus.Databases)</strong>:&nbsp;
        <ul>
            @foreach (var database in Model.Databases)
            {
                <li>@database</li>
            }
        </ul>
    </li>
    @if (@Model.Note != null)
    {
        <li><strong>@nameof(AppSummaryPlus.Note)</strong>:&nbsp;@Model.Note</li>
    }
</ul>


